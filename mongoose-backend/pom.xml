            <modules>
                <module>mongoose-backend-application-javafx</module>
            </modules>
        </profile>

        <!-- Web profiles (GWT, TeaVM) -->
        <profile>
            <id>mongoose-backend-application-gwt</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>mongoose-backend-application-gwt</module>
            </modules>
        </profile>

    </profiles>

